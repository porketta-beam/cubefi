# ================================================================
# RAG Lab Server 환경 변수 설정
# ================================================================

# ================================================================
# 필수 설정 (이 값들은 반드시 설정해야 합니다)
# ================================================================

# OpenAI API 키 (필수)
OPENAI_API_KEY=sk-your_openai_api_key_here

# ================================================================
# 모니터링 설정 (선택사항)
# ================================================================

# LangSmith 추적 설정 (선택)
LANGCHAIN_TRACING_V2=true
LANGSMITH_API_KEY=lsv2_pt_your_langsmith_api_key_here
LANGSMITH_PROJECT=rag_lab_server
LANGSMITH_ENDPOINT=https://api.smith.langchain.com

# ================================================================
# 서버 설정
# ================================================================

# 서버 포트 설정
SERVER_PORT=8000
WEB_PORT=8501

# 개발 모드 (true: 디버그 모드, false: 운영 모드)
DEBUG=false

# CORS 설정 (프론트엔드 URL)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# ================================================================
# RAG 시스템 설정
# ================================================================

# 문서 청킹 설정
CHUNK_SIZE=800
CHUNK_OVERLAP=200

# LLM 모델 설정
MODEL_NAME=gpt-4o-mini
TEMPERATURE=0.2

# 검색 설정
SEARCH_TYPE=similarity
SEARCH_K=5

# ================================================================
# 데이터베이스 및 파일 경로
# ================================================================

# ChromaDB 설정
CHROMA_PERSIST_DIRECTORY=./chroma_db
CHROMA_COLLECTION_NAME=rag_collection

# 문서 저장 경로
RAW_DATA_DIRECTORY=./raw_data

# ================================================================
# 로깅 설정
# ================================================================

# 로그 레벨 (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# 로그 파일 경로
LOG_FILE=./logs/server.log

# 로그 포맷
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# ================================================================
# 성능 및 보안 설정
# ================================================================

# 업로드 파일 크기 제한 (MB)
MAX_FILE_SIZE=100

# 동시 처리 가능한 요청 수
MAX_CONCURRENT_REQUESTS=10

# 요청 타임아웃 (초)
REQUEST_TIMEOUT=300

# ================================================================
# 개발 전용 설정 (운영 환경에서는 사용 안함)
# ================================================================

# 개발 시 자동 리로드
AUTO_RELOAD=false

# API 문서 활성화 (운영에서는 false 권장)
ENABLE_DOCS=true

# 테스트 모드
TEST_MODE=false